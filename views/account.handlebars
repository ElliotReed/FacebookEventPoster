{{!-- If logged in, landing page will display events and have a modal to create a new event --}}
<div class="container">

	{{!-- Page Header --}}
	<div class="page-header">
		<h1>Hello {{firstname}} {{lastname}}, welcome to your events page</h1>
	</div>

	{{!-- Event container --}}
	<div class="event-container">
		<h3>Event info
			<i class="fab fa-facebook-square"></i>
		</h3>
	</div>

	{{!-- Add new event button --}}
	<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add New Event</button>

	{{!-- Logout button --}}
	<a href="/clients/logout">
		<button class="btn btn-info btn-lg logout">Logout</button>
	</a>

	{{!-- Modal to create new event --}}
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					<h4 class="modal-title" id="myModalLabel">Add a new event</h4>

				</div>
				<div class="modal-body">
					<form class="form-inline">
						{{!-- Image --}} {{!-- Event Title --}}
						<div class="form-group">
							<label class="sr-only" for="title">Event Name</label>
							<input type="text" class="form-control" id="title" placeholder="Event Name">
						</div>

						{{!-- Location --}}
						<div class="form-group">
							<label class="sr-only" for="location">Location</label>
							<input type="text" class="form-control" id="location" placeholder="Include a place name or address">
						</div>

						{{!-- Event Date --}}
						<div class="form-group">
							<label class="sr-only" for="date">Event Date</label>
							<input type="date" class="form-control" id="date">
						</div>

						{{!-- Event Start Time --}}
						<div class="form-group">
							<label class="sr-only" for="start">Password</label>
							<input type="time" class="form-control" id="start">
						</div>

						{{!-- Event End Time --}}
						<div class="form-group">
							<label class="sr-only" for="end">Password</label>
							<input type="time" class="form-control" id="end">
						</div>

						{{!-- Description --}}
						<div class="form-group">
							<label class="sr-only" for="description">Description</label>
							<textarea class="form-control" rows="4" id="description"></textarea>
						</div>

						{{!-- Keywords --}} {{!-- Footer: Submit button --}}
						<div class="modal-footer">
							<button id="submit" type="submit" class="btn btn-default">Create</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

