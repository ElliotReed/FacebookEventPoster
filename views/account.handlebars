{{!-- If logged in, landing page will display events and have a modal to create a new event --}} {{!-- Script to activate
facebook, must be at the top --}}
<script src="/js/post.js"></script>

<div class="container">

	{{!-- Page Header --}}
	<div class="page-header">
		<h3>Hello {{firstname}} {{lastname}}, welcome to your events page</h3>
        <div class="userID" style="display: none">{{userId}}</div>
	</div>

    {{!-- Event container --}}
    <div class="event-container">
        {{#each event}}
        <div class="panel panel-default">
            <div class="panel-heading">

                <h2 class="panel-title"><strong>{{title}}</strong>:  <span id="date">{{date}}</span>  <span id="start-time">{{start}}</span> - <span id="end-time">{{end}}</span>

                     <button class="fb-button btn btn-primary facebook-post clearfix" data-id="{{ id }}"><i class="fab fa-facebook-square"></i> Post to Facebook</button>
                </h2>
            </div>
            <div class="panel-body">
                Location: {{location}}
                <p>{{description}}</p>
                <button class="btn btn-info edit-event" id="edit-event" data-id="{{id}}">EDIT</button>
                <button class="btn btn-danger delete-event" data-id="{{id}}">DELETE!</button>
            </div>
        </div>
        {{/each}}
    </div>

    {{!-- Add new event button --}}
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" id="add-event">Add New Event</button>

    {{!-- Modal to create new event --}}
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Add a new event</h4>
                </div>
                <div class="modal-body" id="">
                    <form class="form-group">
                        {{!-- Image --}} {{!-- Event Title --}}
                        <div class="form-group">
                            <label for="title">Event Name</label>
                            <input type="text" class="form-control" id="title" placeholder="Event Name">
                        </div>

                        {{!-- Location --}}
                        <div class="form-group">
                            <label for="location">Location</label>
                            <input type="text" class="form-control" id="location" placeholder="Include a place name or address">
                        </div>

                        {{!-- Event Date --}}
                        <div class="form-group">
                            <label for="date">Event Date</label>
                            <input type="date" class="form-control" id="date">
                        </div>

                        {{!-- Event Start Time --}}
                        <div class="form-group">
                            <label for="start">Start Time</label>
                            <input type="time" class="form-control" id="start">
                        </div>

                        {{!-- Event End Time --}}
                        <div class="form-group">
                            <label for="end">End Time</label>
                            <input type="time" class="form-control" id="end">
                        </div>

                        {{!-- Description --}}
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" rows="4" id="description"></textarea>
                        </div>

                        {{!-- Keywords --}} {{!-- Footer: Submit button --}}
                        <div class="modal-footer">
                            <button id="event-Submit" type="submit" class="btn btn-default">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="fb-modal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Facebook Poster</h4>
                </div>
                <div class="modal-body">
                    <p>The post was successfull!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>

{{!-- event.js to create event table --}}
<script src="/js/event.js"></script>